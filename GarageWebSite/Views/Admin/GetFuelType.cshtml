@model GarageWebSite.Models.Classes.FuelType
@{
    ViewBag.Title = "GetFuelType";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("UpdateFuelType","Admin",FormMethod.Post))
{
    <main>
        <header>
            <h1><i class="fas fa-gas-pump"></i> Updating the Fuel Type</h1>
        </header>

        <div class="container">
            <form method="post">
                <div class="form-group">
                    <label for="fuelName">Fuel ID</label>
                    @Html.TextBoxFor(x => x.FuelId, new { @class = "form-control", @id = "fuelId", @readonly = "readonly" })
                    @*<input type="text" class="form-control" id="fuelName" placeholder="Enter fuelname" required>*@
                </div>
                <div class="form-group">
                    <label for="fuelName">Fuel Name</label>
                    @Html.TextBoxFor(x => x.FuelName, new { @class = "form-control", @id = "fuelName", @placeholder = "Enter Fuelname"})
                    @*<input type="text" class="form-control" id="fuelName" placeholder="Enter fuelname" required>*@
                </div>
                <button type="submit" class="btn btn-primary">Update Fuel Type</button>
            </form>
        </div>
    </main>
}

