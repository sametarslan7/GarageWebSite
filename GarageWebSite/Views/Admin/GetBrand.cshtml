@model GarageWebSite.Models.Classes.Brand
@{
    ViewBag.Title = "GetBrand";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("UpdateBrand", "Admin", FormMethod.Post))
{
    <main>
        <header>
            <h1><i class="fas fa-plus-circle"></i> New Brand </h1>
        </header>

        <div class="container">
            <form method="post">
                <div class="form-group">
                    <label for="brandName">Brand ID</label>
                    @Html.TextBoxFor(x => x.BrandId, new { @class = "form-control", @id = "brandId", @placeholder = "Enter the brand name" , @readonly="readonly"})
                    @*<input type="text" class="form-control" id="brandName" placeholder="Enter the brand name" required>*@
                </div>
                <div class="form-group">
                    <label for="brandName">Brand Name</label>
                    @Html.TextBoxFor(x => x.BrandName, new { @class = "form-control", @id = "brandName", @placeholder = "Enter the brand name" })
                    @*<input type="text" class="form-control" id="brandName" placeholder="Enter the brand name" required>*@
                </div>
                <button type="submit" class="btn btn-primary">Update Brand</button>
            </form>
        </div>
    </main>
}
