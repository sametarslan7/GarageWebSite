@using GarageWebSite.Models.Classes
@model List<FuelType>
@{
    ViewBag.Title = "FuelTypeList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main>
    <!-- Fuel Types -->
    <header>
        <h1><i class="fas fa-gas-pump"></i> Fuel Types</h1>
    </header>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Fuel Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Example Data Entries -->
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.FuelId</td>
                        <td>@x.FuelName</td>
                        <td>
                            <a href="/Admin/GetFuelType/@x.FuelId" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Update
                            </a>
                            <a href="/Admin/DeleteFuelType/@x.FuelId" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <!-- Add New Fuel Type -->
    <div class="addnewbutton">
        <a class="btn btn-info" href="~/Admin/NewFuelType">
            Add New Fuel Type
        </a>
    </div>
</main>
