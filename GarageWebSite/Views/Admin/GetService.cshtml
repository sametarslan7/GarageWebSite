@model GarageWebSite.Models.Classes.Service
@{
    ViewBag.Title = "GetService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("UpdateService","Admin",FormMethod.Post))
{

    <main>
        <header>
            <h1><i class="fas fa-cog"></i> Updating the  Service</h1>
        </header>

        <div class="container">
            <form method="post">

                <div class="form-group">
                    <label for="serviceName">Service ID</label>
                    @Html.TextBoxFor(x => x.Id, new { @class = "form-control",  @id = "serviceID" ,@readonly="readonly" })
                    @*<input type="text" class="form-control" id="serviceName" placeholder="Enter service name" required>*@
                </div>
                <div class="form-group">
                    <label for="serviceName">Service Name</label>
                    @Html.TextBoxFor(x => x.serviceName, new { @class = "form-control", @placeholder = "Enter service name", @id = "serviceName" })
                    @*<input type="text" class="form-control" id="serviceName" placeholder="Enter service name" required>*@
                </div>
                <div class="form-group">
                    <label for="serviceDescription">Service Description</label>
                    @Html.TextAreaFor(x => x.serviceDescription, new { @class = "form-control", @id = "serviceDescription", @placeholder = "Enter service description", @rows = "3" })
                    @*<textarea class="form-control" id="serviceDescription" rows="3" placeholder="Enter service description" required></textarea>*@
                </div>
                <div class="form-group">
                    <label for="servicePhotoUrl">Service Photo URL</label>
                    @Html.TextBoxFor(x => x.servicePhotoUrl, new { @class = "form-control", @id = "servicePhotoUrl", @placeholder = "Enter photo url" })
                    @*<input type="text" class="form-control" id="servicePhotoUrl" placeholder="Enter photo URL" required>*@
                </div>
                <button type="submit" class="btn btn-primary">Update Service</button>
            </form>
        </div>
    </main>
}

