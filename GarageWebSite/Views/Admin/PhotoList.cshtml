@using GarageWebSite.Models.Classes
@model List<CarViewModel>

@{
    ViewBag.Title = "PhotoList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<main>
    <!-- Cars -->
    <header>
        <h1><i class="fas fa-car"></i> Cars</h1>
    </header>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Photos</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Example Data Entries -->
                @foreach (var x in Model)
                {

                    <tr>
                        <td>@x.Car.Id</td>
                        <td>@x.Car.Name</td>
                        <td>
                            <div class="photos-container">
                                @foreach (var y in x.Photos)
                                {
                                    <img src="@y.PhotoUrl" alt="Car Photo" width="150" height="150">
                                }

                            </div>
                        </td>
                        <td>
                            <button class="btn btn-warning btn-sm" style="height:50px;font-size:16px;margin-right:10px;">
                                <i class="fas fa-edit"></i> Update
                            </button>
                            <button class="btn btn-danger btn-sm" style="height:50px;font-size:16px;margin-right:10px;">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- Add New Car -->
    <div class="addnewbutton">
        <a class="btn btn-info" href="new/newcar.html">
            Add New Car
        </a>
    </div>
</main>

