@using GarageWebSite.Models.Classes
@model List<Service>
@{
    ViewBag.Title = "ServiceList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main>
    <!-- Services  -->
    <header>
        <h1><i class="fas fa-concierge-bell"></i> Services</h1>
    </header>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Service Name</th>
                    <th scope="col">Service Description</th>
                    <th scope="col">Service Photo URL</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Example Data Entries -->
                @foreach (var x in Model)
                { 
                    <tr>
                        <td>@x.Id</td>
                        <td>@x.serviceName</td>
                        <td>@x.serviceDescription</td>
                        <td>@x.servicePhotoUrl</td>
                        <td>
                            <button class="btn btn-warning btn-sm" style="margin-bottom:10px;width:100px;">
                                <i class="fas fa-edit"></i> Update
                            </button>
                            <a href="/Admin/DeleteService/@x.Id" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!--  Add New Service -->
    <div class="addnewbutton">
        <a class="btn btn-info" href="/Admin/NewServiceList">
            Add New Service
        </a>
    </div>
</main>

