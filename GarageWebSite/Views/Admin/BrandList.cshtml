@using GarageWebSite.Models.Classes
@model List<Brand> 

@{
    ViewBag.Title = "BrandList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main>
    <!-- Brands -->
    <header>
        <h1><i class="fas fa-tags"></i> Brands</h1>
    </header>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Brand Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Example Data Entries -->
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.BrandId</td>
                        <td>@x.BrandName</td>
                        <td>
                            <button class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Update
                            </button>
                            <a href="/Admin/DeleteBrand/@x.BrandId" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- New Admin Add -->
    <div class="addnewbutton">
        <a class="btn btn-info" href="~/Admin/NewBrand">Add New Brand</a>
    </div>
</main>

